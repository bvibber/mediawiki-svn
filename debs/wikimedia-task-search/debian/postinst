#! /bin/sh
# postinst script for wikimedia-task-search
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package
#

case "$1" in
    configure)
	# Create user account for lsearchd
	adduser --system --home /var/lib/lsearch --ingroup search --disabled-password --shell /bin/sh lsearch

	# Add a line to /etc/motd describing the task of this server
	if [ -f /etc/motd.tail ]
	then
		MOTDFILE=/etc/motd.tail
	else
		MOTDFILE=/etc/motd
	fi

	if ! grep -qs "wikimedia-task-search" $MOTDFILE
	then
		echo "$(hostname) is a Wikimedia search server (wikimedia-task-search)." >> $MOTDFILE

		if [ -f /etc/motd.tail ]
		then
		        # Update motd
	 		uname -snrvm > /var/run/motd
        		cat /etc/motd.tail >> /var/run/motd
		fi
	fi

	echo "Making /a recursively owned by group search, mode g+rw"
	chgrp -R search /a
	chmod -R g+rw /a

	echo "Touching file /etc/lsearch.conf and making sure it's editable by group search"
	touch /etc/lsearch.conf
	chgrp search /etc/lsearch.conf
	chmod g+rw /etc/lsearch.conf
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)

    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


