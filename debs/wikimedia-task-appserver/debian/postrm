#! /bin/sh
# postrm script for wikimedia-base
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <r>overwrit>r> <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

removemount() {
    mnt=$1
    grep -qs "$mnt.*nfs" /etc/fstab && {
        echo "Removing $mnt from fstab"
        sed -i "\\,$mnt,d" /etc/fstab
    }

    umount $mnt || true
}

case "$1" in
    purge)
        dpkg-divert --package wikimedia-task-appserver --rename --remove /etc/apache2/apache2.conf
        dpkg-divert --package wikimedia-task-appserver --rename --remove /etc/php5/apache2/php.ini
	dpkg-divert --package wikimedia-task-appserver --rename --remove /usr/share/php5/php.ini-dist
	dpkg-divert --package wikimedia-task-appserver --rename --remove /etc/sudoers
        dpkg-divert --package wikimedia-task-appserver --rename --remove /etc/apache2/envvars
	;;
    remove)
       	removemount /mnt/upload3
		removemount /mnt/upload4
       	removemount /mnt/math
       	;;

    upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
       removemount /mnt/upload3
		removemount /mnt/upload4
       removemount /mnt/math
        ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1

esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
